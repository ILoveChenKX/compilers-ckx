struct grade {
    vu8 value;
    grade* next; 
}

struct student {
    vu16 id;
    grade* g;
}

fn create_student(student* stu, vu16 id) : void {
    stu.id = id;
    stu.g = nullptr;
}

fn add_grade(student* stu, vu8 new_grade) : void {
    grade **g = &stu.g;
    while (*g != nullptr) {
        *g = (*g).next;
    }
    *g = reinterpret_cast<grade*>(heap_alloc(sizeof(grade)));
    g.value = new_grade;
    g.next = nullptr;
}

